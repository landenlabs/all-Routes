<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nest shape in layer-list to add padding -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey900" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/panel_edge_width"
        android:left="@dimen/panel_edge_width"
        android:right="@dimen/panel_edge_width"
        android:top="@dimen/panel_edge_width">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/grey700" />
        </shape>
    </item>

</layer-list>